<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/panel_fragment_gv_icon"
        android:layout_width="280.0dip"
        android:layout_height="280.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/panel_setting_bg"
        android:listSelector="@android:color/transparent"
        android:longClickable="true"
        android:numColumns="3"
        android:padding="5.0dip"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/panel_fragment_gv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24.0dip"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/panel_back_new"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/panel_fragment_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1/2 MAIN"
            android:textColor="#ff666666"
            android:textSize="18.0dip"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/panel_next_new"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </LinearLayout>

</RelativeLayout>